<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/idleTime"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="Idle Time" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignTop="@+id/sleepStop"
        android:text="Wake up Time" />

    <EditText
        android:id="@+id/sleepStop"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/sleepStart"
        android:layout_alignLeft="@+id/sleepStart"
        android:layout_alignStart="@+id/sleepStart" />

    <EditText
        android:id="@+id/sleepStart"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/warningTime"
        android:layout_alignLeft="@+id/warningTime"
        android:layout_alignStart="@+id/warningTime" />

    <EditText
        android:id="@+id/idleTime"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="83dp"
        android:ems="10"
        android:inputType="number"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <EditText
        android:id="@+id/warningTime"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/idleTime"
        android:layout_alignLeft="@+id/idleTime"
        android:layout_alignStart="@+id/idleTime"
        android:layout_marginTop="42dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/sleepStart"
        android:text="Sleep Time " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Warning Time"
        android:layout_alignTop="@+id/warningTime"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sleepStop"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sleepStop"
        android:layout_marginBottom="27dp"
        android:text="SAVE"
        android:onClick="save"/>


</RelativeLayout>